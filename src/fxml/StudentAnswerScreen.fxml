<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.RadioButton?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.StudentAnswerScreen"
            prefHeight="400.0" prefWidth="600.0">
    <HBox alignment="CENTER" prefWidth="600">
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="460.0">
            <Label fx:id="labelQuestionTitle" alignment="CENTER" prefHeight="40" prefWidth="436.0" text="Текст вопроса"/>
            <VBox prefHeight="15"/>
            <HBox alignment="CENTER_LEFT">
                <RadioButton mnemonicParsing="false" fx:id="radioButtonAnswer1"/>
                <HBox prefWidth="10"/>
                <Label fx:id="labelAnswer1" prefHeight="25.0" prefWidth="281.0" text="Ответ 1"/>
            </HBox>
            <VBox prefHeight="5"/>
            <HBox alignment="CENTER_LEFT">
                <RadioButton mnemonicParsing="false" fx:id="radioButtonAnswer2"/>
                <HBox prefWidth="10"/>
                <Label fx:id="labelAnswer2" prefHeight="25.0" prefWidth="281.0" text="Ответ 2"/>
            </HBox>
            <VBox prefHeight="5"/>
            <HBox alignment="CENTER_LEFT">
                <RadioButton mnemonicParsing="false" fx:id="radioButtonAnswer3"/>
                <HBox prefWidth="10"/>
                <Label fx:id="labelAnswer3" prefHeight="25.0" prefWidth="281.0" text="Ответ 3"/>
            </HBox>
            <VBox prefHeight="5"/>
            <HBox alignment="CENTER_LEFT">
                <RadioButton mnemonicParsing="false" fx:id="radioButtonAnswer4"/>
                <HBox prefWidth="10"/>
                <Label fx:id="labelAnswer4" prefHeight="25.0" prefWidth="281.0" text="Ответ 4"/>
            </HBox>
            <VBox prefHeight="15"/>
            <HBox alignment="CENTER_RIGHT">
                <Button prefWidth="120" prefHeight="40" mnemonicParsing="false" onAction="#onButtonSubmitClick"
                        text="Дальше"/>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
