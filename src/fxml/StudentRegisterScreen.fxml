<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.StudentRegisterScreen"
            prefHeight="400.0" prefWidth="600.0">
    <HBox alignment="CENTER" prefWidth="600">
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="460.0">

            <Separator/>

            <HBox alignment="CENTER">
                <Separator orientation="VERTICAL"/>
                <VBox alignment="CENTER_RIGHT" prefWidth="150">
                    <Label alignment="CENTER" prefWidth="150" text="Логин"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
                <VBox alignment="CENTER_LEFT" prefWidth="150">
                    <TextField fx:id="textFieldLogin" alignment="CENTER" prefWidth="150"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
            </HBox>

            <Separator/>

            <HBox alignment="CENTER">
                <Separator orientation="VERTICAL"/>
                <VBox alignment="CENTER_RIGHT" prefWidth="150">
                    <Label alignment="CENTER" prefWidth="150" text="Пароль"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
                <VBox alignment="CENTER_LEFT" prefWidth="150">
                    <PasswordField fx:id="passwordField" alignment="CENTER" prefWidth="150"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
            </HBox>

            <Separator/>

            <HBox alignment="CENTER">
                <Separator orientation="VERTICAL"/>
                <VBox alignment="CENTER_RIGHT" prefWidth="150">
                    <Label alignment="CENTER" prefWidth="150" text="Имя пользователя"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
                <VBox alignment="CENTER_LEFT" prefWidth="150">
                    <TextField fx:id="textFieldUsername" alignment="CENTER" prefWidth="150"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
            </HBox>

            <Separator/>

            <HBox prefHeight="25"/>

            <Separator/>

            <HBox alignment="CENTER_RIGHT">
                <VBox alignment="CENTER_RIGHT" prefWidth="150"/>
                <VBox alignment="CENTER_LEFT" prefWidth="150">
                    <Button alignment="CENTER" onAction="#onButtonSignInClick" prefWidth="150" text="Зарегистрироваться"/>
                </VBox>
            </HBox>

            <Separator/>
        </VBox>
    </HBox>
</AnchorPane>
